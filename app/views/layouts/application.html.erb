                        <%= link_to edit_admin_user_path(current_user.id) do %><li><%= t('paginas_estaticas.menu.perfil') %></li><% end %>
                    <% end %>
                    <%= link_to contact_path do %><li><%= t('paginas_estaticas.menu.ayuda') %></li><% end %>
                    <%= link_to destroy_user_session_path, :method => :delete do %><li><%= t('paginas_estaticas.menu.salir') %></li><% end %>
                <% else %>
                    <%= link_to root_path do %><li><%= t('paginas_estaticas.menu.inicio') %></li><% end %>
                    <%= link_to places_path do %><li><%= t('paginas_estaticas.menu.sidrerias') %></li><% end %>
                    <%= link_to all_maps_path do %><li><%= t('paginas_estaticas.menu.mapa') %></li><% end %>
                    <%= link_to contact_path do %><li><%= t('paginas_estaticas.menu.contacto') %></li><% end %>
