                      <%= f.password_field :password, class: 'formulario', placeholder: 'Password' %>
                      <!--<%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>-->
                      <%= f.submit 'Sign in', class: 'formulario', id: 'enviar' %>
